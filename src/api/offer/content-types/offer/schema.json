{
  "kind": "collectionType",
  "collectionName": "offers",
  "info": {
    "singularName": "offer",
    "pluralName": "offers",
    "displayName": "Offer",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "minLength": 2,
      "maxLength": 50,
      "required": true
    },
    "description": {
      "type": "text",
      "minLength": 2,
      "maxLength": 500
    },
    "price": {
      "type": "decimal",
      "required": true,
      "max": 100000,
      "min": 1
    },
    "picture": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "owner": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "offers"
    }
  }
}
